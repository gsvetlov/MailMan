<Window x:Class="MailMan.Views.UserDialog.MessageEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMan.Views.UserDialog"
        mc:Ignorable="d"
        Title="MessageEditDialog" Height="350" Width="400">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Заголовок">
            <TextBox Name="tbTitle" Text=""/>
        </GroupBox>
        <GroupBox Header="Сообщение" Height="200">
            <TextBox Name="tbMessage" Text="" AcceptsReturn="True" AcceptsTab="True"/>
        </GroupBox>
        <UniformGrid Margin="20" Columns="2">
            <Button IsDefault="True" Click="ButtonOk_Click" Grid.Column="0" Content="Ok" Padding="4" Width="80" Margin="20,0,0,0"/>
            <Button IsCancel="True" Click="ButtonCancel_Click" Grid.Column="1" Content="Cancel" Padding="4" Width="80" Margin="0,0,20,0"/>
        </UniformGrid>

    </StackPanel>
</Window>
