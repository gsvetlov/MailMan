<Window x:Class="MailMan.Views.UserNotificationDialog.UserNotificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMan.Views.UserNotificationDialog"
        xmlns:vm="clr-namespace:MailMan.ViewModels"
        mc:Ignorable="d"        
        Title="{Binding Title}" Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <vm:UserNotificationDialogViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding NotificationText}" Foreground="{Binding TextForeground}" HorizontalAlignment="Center" Margin="10,30"/>
        <Button Content="{Binding ButtonContent}" Width="50" Margin="10" Click="Button_Click"/>
    </StackPanel>
</Window>
